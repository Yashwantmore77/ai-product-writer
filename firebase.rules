// Firestore security rules
// Recommended production rules: require authentication and restrict users to their own document
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection: only authenticated user may read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny access to all other documents by default (tightest default)
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}

